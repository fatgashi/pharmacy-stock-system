# ========================================
# PHARMACY STOCK SYSTEM - ENVIRONMENT VARIABLES
# ========================================
# Copy this file to .env and fill in your actual values

# ========================================
# SERVER CONFIGURATION
# ========================================
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3000

# ========================================
# DATABASE CONFIGURATION
# ========================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_db_username
DB_PASSWORD=your_db_password
DB_NAME=pharmacy_stock_system
DB_CONNECTION_LIMIT=10

# ========================================
# JWT AUTHENTICATION
# ========================================
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_refresh_token_secret_key_here
JWT_REFRESH_EXPIRES_IN=7d

# ========================================
# EMAIL SERVICE CONFIGURATION
# ========================================
# Email service provider (gmail, outlook, yahoo, etc.)
EMAIL_SERVICE=gmail

# Email account credentials
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_or_email_password

# Email settings
EMAIL_FROM=your_email@gmail.com
EMAIL_REPLY_TO=noreply@yourpharmacy.com

# ========================================
# PHARMACY SYSTEM SETTINGS
# ========================================
# Default pharmacy settings
DEFAULT_LOW_STOCK_THRESHOLD=10
DEFAULT_EXPIRY_ALERT_DAYS=30

# File upload settings
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# ========================================
# SECURITY SETTINGS
# ========================================
# Password hashing
BCRYPT_ROUNDS=12

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS settings
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# ========================================
# CRON JOB SETTINGS
# ========================================
# Enable/disable cron jobs
ENABLE_LOW_STOCK_CHECK=true
ENABLE_EXPIRY_CHECK=true

# Cron job schedules (in production, these should be less frequent)
# Low stock check: 9 AM, 1 PM, 5 PM daily
LOW_STOCK_CRON_SCHEDULE=0 9,13,17 * * *
# Expiry check: 2 AM daily
EXPIRY_CRON_SCHEDULE=0 2 * * *

# ========================================
# NOTIFICATION SETTINGS
# ========================================
# Enable/disable email notifications
ENABLE_EMAIL_NOTIFICATIONS=true

# Notification preferences
NOTIFY_LOW_STOCK=true
NOTIFY_NEAR_EXPIRY=true
NOTIFY_EXPIRED_PRODUCTS=true

# ========================================
# EXTERNAL SERVICES (Optional)
# ========================================
# SMS service (if you want to add SMS notifications later)
SMS_SERVICE=twilio
SMS_ACCOUNT_SID=your_twilio_account_sid
SMS_AUTH_TOKEN=your_twilio_auth_token
SMS_FROM_NUMBER=+1234567890

# Payment gateway (if you want to add payment features later)
PAYMENT_GATEWAY=stripe
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# ========================================
# DEVELOPMENT & TESTING
# ========================================
# Test database (for running tests)
TEST_DB_HOST=localhost
TEST_DB_PORT=3306
TEST_DB_USER=test_user
TEST_DB_PASSWORD=test_password
TEST_DB_NAME=pharmacy_stock_system_test

# Mock email service for testing
MOCK_EMAIL_SERVICE=false
TEST_EMAIL_RECIPIENT=test@example.com

# ========================================
# MONITORING & ANALYTICS (Optional)
# ========================================
# Application monitoring
ENABLE_MONITORING=false
MONITORING_SERVICE=newrelic
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key

# Error tracking
ENABLE_ERROR_TRACKING=false
SENTRY_DSN=your_sentry_dsn_url

# ========================================
# BACKUP & MAINTENANCE
# ========================================
# Database backup settings
ENABLE_AUTO_BACKUP=false
BACKUP_SCHEDULE=0 2 * * 0
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# ========================================
# NOTES & INSTRUCTIONS
# ========================================
# 1. Copy this file to .env
# 2. Fill in your actual values
# 3. Never commit .env to version control
# 4. Keep your JWT secrets secure and random
# 5. Use app passwords for Gmail (don't use regular passwords)
# 6. Adjust cron schedules based on your business needs
# 7. Test email service before going to production
# 8. Monitor your email sending limits (Gmail: 500/day for free accounts)

